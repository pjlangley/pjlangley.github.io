{
  "name": "pjlangley.com",
  "version": "2.0.0",
  "description": "React JS consultancy from Peter J Langley",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pjlangley/pjlangley.github.io.git"
  },
  "scripts": {
    "build": "node-sass ./scss/main.scss --output-style compressed | postcss -u autoprefixer -o ./assets/css/main.css",
    "build:watch": "node-sass ./scss/main.scss -w | postcss -u autoprefixer -o ./assets/css/main.css"
  },
  "private": true,
  "keywords": [
    "react",
    "reactjs",
    "js",
    "javascript"
  ],
  "author": "Peter J Langley",
  "homepage": "https://pjlangley.com",
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "node-sass": "^4.13.1",
    "postcss-cli": "^7.1.0",
    "prettier": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,scss,md}": "prettier --write --prose-wrap always"
  }
}
